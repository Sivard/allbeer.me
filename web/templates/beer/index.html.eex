<h2 class="text-center">Марки пива</h2>

<%= for beer <- @beers do %>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="..." alt="<%= beer.name %>">
    <div class="card-body">
      <h5 class="card-title"><%= beer.name %></h5>
      <p class="card-text"><%= beer.description %></p>
      <%= link "Подробнее...", to: beer_path(@conn, :show, beer.slug), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
